<%= form_tag({ :controller => :start_end_date, :action => 'update_start', :tab => 'start'},
             :method => :post, :id => "form_start_date") do %>

    <fieldset class="box tabular">

      <%= @statuses.find_each do |status| %>
          <p>
            <label><%=  status.name %></label>
            <%= check_box_tag 'start_settings['+ status.id.to_s + ']', status.id,
                               !(@start_dates.find_by(status_id: status.id).nil?) %>
          </p>
      <% end %>
    </fieldset>
    <%= submit_tag l(:button_apply) %>
<% end %>